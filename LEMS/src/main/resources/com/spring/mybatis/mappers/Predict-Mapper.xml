<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Predict-Mapper">
	<sql id ="search">
		<if test="searchType == 'd'.toString()">
			and predDate like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'A'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'B'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'C'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'D'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'E'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'F'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'G'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'G'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'I'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'J'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'K'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'L'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'M'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
		
		<if test="searchType == 'N'.toString()">
			and hwcode like '%'||#{searchType}||'%'
		</if>
	</sql>

	<select id="selectSearchPredictList" resultType="predict">
		select *
		from predict
		where prednum is not null
		<include refid="search"/>
		order by predDate desc
	</select>
	
	<select id="selectSearchPredictListCount" resultType="int">
		select count(*)
		from predict
		where prednum is not null
		<include refid="search" />
		order by predDate desc
	</select>
	
	<select id="selectPredictBypredNum" resultType="predict">
		select *
		from predict
		where prednum = #{prednum}
	</select>
</mapper>